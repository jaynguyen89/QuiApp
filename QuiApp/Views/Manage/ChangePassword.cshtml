@model ChangePasswordViewModel
@{
    ViewData.AddActivePage(ManageNavPages.ChangePassword);
}

<div class="row">
    @Html.Partial("_StatusMessage", Model.StatusMessage)
    <div style="max-width: 500px;">
        <form method="post" class="ui form">
            <div asp-validation-summary="All" class="redText"></div>
            <div class="field">
                <label asp-for="OldPassword"></label>
                <input asp-for="OldPassword" />
                <span asp-validation-for="OldPassword" class="redText"></span>
            </div>
            <div class="field">
                <label asp-for="NewPassword"></label>
                <input asp-for="NewPassword" />
                <span asp-validation-for="NewPassword" class="redText"></span>
            </div>
            <div class="field">
                <label asp-for="ConfirmPassword"></label>
                <input asp-for="ConfirmPassword" />
                <span asp-validation-for="ConfirmPassword" class="redText"></span>
            </div>
            <button type="submit" class="ui red button">Change Password</button>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
