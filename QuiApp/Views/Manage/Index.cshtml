@model IndexViewModel
@{
    ViewData.AddActivePage(ManageNavPages.Index);
}

<div class="row">
    @Html.Partial("_StatusMessage", Model.StatusMessage)
    <div style="max-width: 500px;">
        <form method="post" class="ui form">
            <div asp-validation-summary="All" class="redText"></div>
            <div class="field">
                <label asp-for="Username"></label>
                <input asp-for="Username" disabled />
            </div>
            <div class="field">
                <label asp-for="Email"></label>
                <div class="field">
                    <input asp-for="Email" disabled />
                    @if (Model.IsEmailConfirmed)
                    {
                        <div class="ui pointing green basic label">Email has been confirmed.</div>
                    }
                    else
                    {
                        <button asp-action="SendVerificationEmail" class="btn btn-link">Send verification email</button>
                    }
                </div>
                <span asp-validation-for="Email" class="redText"></span>
            </div>
            <div class="field">
                <label asp-for="PhoneNumber"></label>
                <input asp-for="PhoneNumber" placeholder="Ex. 0412 345 678" />
                <div asp-validation-for="PhoneNumber" class="redText"></div>
            </div>
            <button type="submit" class="ui primary button">Update</button>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
