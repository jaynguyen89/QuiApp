@using Microsoft.AspNetCore.Identity
@using QuiApp.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav navbar-right">
            <li>
                <div class="ui dropdown item">
                    Hello @UserManager.GetUserName(User)! &nbsp;&nbsp; <i class="fas fa-caret-down"></i>
                    <div class="menu">
                        <div class="item">
                            <a asp-area="" asp-controller="Manage" asp-action="Index" title="Manage" class="myDropdown">Manage Account</a>
                        </div>
                        <div class="item">
                            Another action
                        </div>
                        <div class="item">
                            Something else here
                        </div>
                        <div class="ui divider"></div>
                        <div class="header">
                            Navbar header
                        </div>
                        <div class="item">
                            Seperated link
                        </div>
                        <div class="item">
                            <button type="submit" class="ui red button">Log out</button>
                        </div>
                    </div>
                </div>
            </li>
        </ul>
    </form>
}
else
{
    <div class="nav navbar-nav navbar-right">
        <div class="pull-left" style="margin-left: 17px; margin-top: 5px;">
            <a asp-area="" asp-controller="Account" asp-action="Register" class="ui button">Register</a>
        </div>
        <div class="pull-right" style="margin-right: 17px; margin-top: 5px;">
            <a asp-area="" asp-controller="Account" asp-action="Login" class="ui primary button">Log in</a>
        </div>
    </div>
}
