@model RegisterViewModel
@{
    ViewData["Title"] = "Register";
}

<div class="homeIndex">
    <div class="ui container center aligned">
        <h1>@ViewData["Title"]</h1>
        <hr class="hrStyle" />
        <p>Create new account using your personal email address</p>
    </div>

    <div class="row">
        <div style="max-width: 350px; margin: auto;">
            <form asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post" class="ui form">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="field">
                    <label asp-for="Email"></label>
                    <input asp-for="Email" placeholder="Ex: example.email01@domain.com.ex" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="field">
                    <label asp-for="Password"></label>
                    <input asp-for="Password" placeholder="Include a special character" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="field">
                    <label asp-for="ConfirmPassword"></label>
                    <input asp-for="ConfirmPassword" placeholder="Re-type password" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
                <button type="submit" class="ui button primary">Register</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
